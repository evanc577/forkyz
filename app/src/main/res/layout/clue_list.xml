<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <app.crossword.yourealwaysbe.view.ScrollingImageView
        android:id="@+id/miniboard"
        android:layout_width="fill_parent"
        android:layout_height="0.501in"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <requestFocus />
    </app.crossword.yourealwaysbe.view.ScrollingImageView>
    <app.crossword.yourealwaysbe.view.ClueTabs
        android:layout_below="@id/miniboard"
        android:id="@+id/clueListClueTabs"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</RelativeLayout>
