<resources>
    <!-- inherit from the material theme -->
    <style name="Theme.Forkyz" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/actionNavigationButtonStyle</item>
    </style>

    <style name="actionOverflowButtonStyle"   parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/titleTextColor</item>
    </style>
    <style name="actionNavigationButtonStyle"   parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/titleTextColor</item>
    </style>
</resources>
